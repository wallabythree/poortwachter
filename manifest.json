{
    "manifest_version": 3,
    "name": "Poortwachter",
    "description": "Stay logged in on OU.NL",
    "author": "wallaby",
    "browser_specific_settings": {
    "gecko": {
            "id": "poortwachter@wallaby3.com",
            "update_url": "https://raw.githubusercontent.com/wallabythree/poortwachter/main/updates.json"
        }
    },
    "homepage_url": "https://github.com/wallabythree/poortwachter",
    "icons": {
        "128": "images/poortwachter.png"
    },
    "version": "0.2.1.1",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/poortwachter.png"
    },
    "background": {
        "scripts": ["worker/worker.js"],
        "type": "module"
    },
    "permissions": [
        "webRequest",
        "alarms",
        "cookies",
        "storage"
    ],
    "host_permissions": [
        "*://login.ou.nl/"
    ]
}

